#carousel-example-generic.carousel.slide{"data-ride" => "carousel"}
  %ol.carousel-indicators
    %li{"data-slide-to" => "0", "data-target" => "#carousel-example-generic"}
    %li.active{"data-slide-to" => "1", "data-target" => "#carousel-example-generic"}
    %li{"data-slide-to" => "2", "data-target" => "#carousel-example-generic"}
  .carousel-inner
    .item
      %img{alt: "First slide", src: asset_path("1.jpeg"), style: "height: 400px; width: 100%; overflow: hidden;"}
    .item.active
      %img{alt: "Second slide", src: asset_path("2.jpeg"), style: "height: 400px; width: 100%; overflow: hidden;"}
    .item
      %img{alt: "Third slide", src: asset_path("3.jpg"), style: "height: 400px; width: 100%; overflow: hidden;"}
  %a.left.carousel-control{"data-slide" => "prev", href: "#carousel-example-generic"}
    %span.glyphicon.glyphicon-chevron-left
  %a.right.carousel-control{"data-slide" => "next", href: "#carousel-example-generic"}
    %span.glyphicon.glyphicon-chevron-right

